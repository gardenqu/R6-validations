<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="table">
  <thead>
    <tr>
    <th class="col-1" ></th>
      <th > Full name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
      <td class="col-1"><i class="fa-solid fa-user"></i></td>
       <td><%= customer.full_name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-secondary text-white" %> <%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-secondary text-white"%></td>
  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path , class: "btn btn-secondary text-white " %>
<%= link_to 'All Orders', orders_path, class: "btn btn-secondary text-white" %>